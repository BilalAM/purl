<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.23.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">

    <changeSet id="1735588800000-1" author="bilalasifmirza">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="mapping"/>
            </not>
        </preConditions>
        <sql>
            create table mapping
            (
                short_url       varchar(255)                                     not null,
                long_url        text                                             not null,
                id              bigserial
                    constraint mapping_pk
                        primary key,
                long_url_hashed varchar(255) default 'sample'::character varying not null,
                created_at      timestamp with time zone                         not null
            );

            create index long_url_hashed_idx
                on mapping (long_url_hashed);
        </sql>
    </changeSet>

</databaseChangeLog>
